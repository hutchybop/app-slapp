<% layout('layouts/boilerplate')%>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="content mb-4 text-center">
                <h2>Shopping List App</h2>
                <h4>Create your meals</h4>
                <h4>Add ingredients</h4>
                <h4>Choose your meals for the week</h4>
                <h4>Create your personilsed weekly shopping list</h4>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mt-4 mb-3">
                <div class="card-header">
                    <div class="d-flex">
                        <div class="mr-auto">
                            <h4 class="card-title">All Your Shopping Lists</h4>
                            <h6>Will only store your last 10 saved lists</h6>
                        </div>
                        <div>
                            <a class='btn btn-primary btn-sm' href="/shoppinglist/new">Create New</a>
                        </div>
                    </div>
                    
                </div>

                <div class="card-body">
                    <ul class="list-group list-group-flush"></ul>
                    <% for(i of list){ %>
                    <li class="list-group-item">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 col-lg-6">
                                            <%= i.name %>
                                    </div>
                                    <div class="col-md-12 col-lg-6">
                                        <div class="d-flex">
                                            <div class="pr-2">
                                                <a class='btn btn-outline-primary btn-sm' href="/shoppinglist/<%=i.id%>">View</a>
                                            </div>
                                            <div class="pr-2">
                                                <a class='btn btn-outline-secondary btn-sm' href="/shoppinglist/edit/<%=i.id%>">Edit</a>
                                            </div>
                                            <div class="pr-2">
                                                <form id="slIndexAlertDelete" action="/shoppinglist/<%=i.id%>?_method=DELETE" method='post'>
                                                    <button form="slIndexAlertDelete" class='btn btn-outline-danger btn-sm' type="submit">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                        
                                </div>
                            </div>
                    </li>
                    <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<% layout('layouts/boilerplate')%>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mt-4 mb-3">
                <div class="card-header">
                    <h2 class="card-title">
                        Edit the ingredient: <%= ingredient.name %> 
                    </h2>
                    <div>
                        <a class='btn btn-secondary mt-2' href='/ingredients'>Cancel</a>
                    </div>
                </div>
                <div class="card-body">

                    <form id='edit' action="/ingredients/<%=ingredient.id%>?_method=PUT" method='post'
                        class='validated-form' novalidate>
                        <div class='form-group'>
                            <label for="name" class='form-label'>Enter the ingredient name</label>
                            <input type="text" id="name" class="form-control" name="name" value='<%= ingredient.name %>'
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide an ingredient name.
                            </div>
                        </div>

                        <div class='form-group'>
                            <label for="cat" class='form-label'>
                                Choose a category (Helps organise the final list):
                            </label>
                            <select name="cat" id="cat" class="form-select">
                                <% for(let c = 0; c < catArray.length; c++){ %>
                                    <% if(catArray[c] === ingredient.cat){ %>
                                        <option value="<%= catArray[c] %>" selected> <%= catArray[c] %> </option>
                                    <% }else{ %>
                                    <option value="<%= catArray[c] %>"> <%= catArray[c] %> </option>
                                    <% } %>
                                <% } %>
                            </select>
                        </div>

                        <div class="d-flex">
                            <div class="ms-auto">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                            <div>
                                <button form="ingEditAlertDelete" class="btn btn-danger" type="submit">Delete</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<form id="ingEditAlertDelete" action="/ingredients/<%=ingredient.id%>?_method=DELETE" method='Post'></form>
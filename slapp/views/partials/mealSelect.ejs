                </div>
                <select class="custom-select" name="friday" id="friday">
                    <% let defaultCountFri = 0 %>
                    <% for(let m of meals){ %>
                        <% if(m.default.includes('friday')) { %>
                            <% defaultCountFri++ %>
                            <option value="<%= m._id %>" selected> <%= m.mealName %> </option>
                        <% }else if(m.mealType === 'Main') { %>
                            <option value="<%= m._id %>"> <%= m.mealName %> </option>
                        <% } %>
                    <% } %>
                    <% if(defaultCountFri === 0){ %>

<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-4 mb-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <img src="../images/details.jpeg" alt="" class="card-img-top" style='max-width: 400px;' />
                <div class="card-body">
                    <div class="d-flex">
                        <div class="mr-auto">
                            <h3 class="card-title">Update Details</h3>
                        </div>
                        <div>
                            <a class='btn btn-primary btn-sm' href="/auth/logout">Logout</a>
                        </div>
                    </div>
                    
                    <form action="/auth/details" method="POST" class="validated-form" novalidate>
                        <div class="form-group">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" value="<%=username%>" autofocus required>
                            <div class="invalid-feedback">
                                Username is required
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="text" id="email" name="email" value="<%=email%>" required>
                            <div class="invalid-feedback">
                                Email is required
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="invalid-feedback">
                                Password is required to confirm
                            </div>
                        </div>

                        <button class="btn btn-success btn-block">Update</button>

                        <div class="mt-4">
                            <a class='btn btn-danger btn-sm' href="/auth/deletepre">Delete Account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
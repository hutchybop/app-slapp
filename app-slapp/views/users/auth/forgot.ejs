<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-4 mb-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <img src="../images/forgot.jpeg" alt="" class="card-img-top" />
                <div class="card-body">
                    <div class="d-flex">
                        <div class="mr-auto">
                            <h3 class="card-title">Forgot Password</h3>
                        </div>
                        <div>
                            <a class='btn btn-primary btn-sm' href="/auth/login">Back to Login</a>
                        </div>
                    </div>
                    
                    <form action="/auth/forgot" method="POST" class="validated-form" novalidate>
                        <div class="form-group">
                            <label class="form-label" for="email">Enter Your Email Address</label>
                            <input class="form-control" type="email" id="email" name="email" autofocus required>
                            <div class="invalid-feedback">
                                Please provide an email address
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>